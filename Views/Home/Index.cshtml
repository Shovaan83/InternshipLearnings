        }

        /* CTA Section */
        .cta-section {
            padding: 120px 0;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
            text-align: center;
            position: relative;
            overflow: hidden;
        }

            .cta-section::before {
