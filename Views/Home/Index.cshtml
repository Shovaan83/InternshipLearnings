            }

        .feature-card:hover .feature-icon {
            transform: scale(1.1) rotate(360deg);
        }

        .feature-title {
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
            color: var(--text-primary);
        }

        .feature-description {
            font-size: 1.1rem;
