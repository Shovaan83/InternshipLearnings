@model YourApp.Models.AddUserModel
@{
    ViewData["Title"] = "Delete User";
}

<h2>Are you sure you want to delete this user?</h2>

<div>
    <h4>@Model.FullName (@Model.Username)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Branch</dt>
        <dd class="col-sm-10">@Model.Branch</dd>

        <dt class="col-sm-2">Contact</dt>
        <dd class="col-sm-10">@Model.Contact</dd>

        <dt class="col-sm-2">Role</dt>
        <dd class="col-sm-10">@Model.Role</dd>

        <dt class="col-sm-2">Active</dt>
        <dd class="col-sm-10">@Model.Active</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="UserList" class="btn btn-secondary">Cancel</a>
</form>
